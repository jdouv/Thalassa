@using Thalassa.App_GlobalResources

<div class="container bg-text blockchainValidationResults animate slideIn">
    @if (ViewBag.Results == null)
    {
        <div class="row">
            <div class="col">
                <div class="symbol bgTextSymbolCenter"></div>
                <div class="bgTextMessage">@Messages.Admin_BlockchainIsEmpty</div>
            </div>
        </div>
    }
    else
    {
        if (ViewBag.Results[0].Count == 0 && ViewBag.Results[1].Count == 0)
        {
            <div class="row">
                <div class="col">
                    <div class="symbol bgTextSymbolCenter successTextColor"></div>
                    <div class="bgTextMessage">@Messages.Admin_BlockchainIsValid</div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <div class="symbol bgTextSymbolCenter errorTextColor"></div>
                    <div>@Messages.Admin_BlockchainIsInvalid</div>
                    @if (ViewBag.Results[0].Count != 0)
                    {
                        <div>
                            <div class="invalidBlockchainResultsHead text-center">
                                @Messages.Admin_BlockchainResultsCalculationMessage
                            </div>
                            <div class="row tableTitleRow">
                                <div class="col-2 align-self-center text-center wordBreak">@Messages.Blockchain_BlockNumber</div>
                                <div class="col align-self-center text-center wordBreak">@Messages.Blockchain_Timestamp</div>
                                <div class="col align-self-center text-center wordBreak">@Messages.Blockchain_HashExpected</div>
                                <div class="col align-self-center text-center wordBreak">@Messages.Blockchain_HashFound</div>
                            </div>
                            @foreach (var result in ViewBag.Results[0])
                            {
                                <div class="row tableSimpleRow blockchainValidationResultRow">
                                    <div class="col-2 align-self-center text-center resultsBlockNumber">@result.Key</div>
                                    <div class="col align-self-center text-center">@result.Value[0]</div>
                                    <div class="col align-self-center text-center validationResultsHash">@result.Value[1]</div>
                                    <div class="col align-self-center text-center validationResultsHash">@result.Value[2]</div>
                                </div>
                            }
                        </div>
                    }
                    @if (ViewBag.Results[1].Count != 0)
                    {
                        <div>
                            <div class="invalidBlockchainResultsHead text-center">
                                @Messages.Admin_BlockchainResultsReferenceMessage
                            </div>
                            <div class="row tableTitleRow">
                                <div class="col align-self-center text-center wordBreak">@Messages.Blockchain_NumberTimestampOfFirst</div>
                                <div class="col align-self-center text-center wordBreak">@Messages.Blockchain_NumberTimestampOfSecond</div>
                                <div class="col align-self-center text-center wordBreak">@Messages.Blockchain_HashExpected</div>
                                <div class="col align-self-center text-center wordBreak">@Messages.Blockchain_HashFound</div>
                            </div>
                            
                            @foreach (var result in ViewBag.Results[1])
                            {
                                <div class="row tableSimpleRow blockchainValidationResultRow">
                                    <div class="col align-self-center text-center">@result.Key / @result.Value[0]</div>
                                    <div class="col align-self-center text-center">@(result.Key + 1) / @result.Value[1]</div>
                                    <div class="col align-self-center text-center validationResultsHash">@result.Value[2]</div>
                                    <div class="col align-self-center text-center validationResultsHash">@result.Value[3]</div>
                                </div>
                            }
                        </div>
                    } 
                </div>
            </div>
        }      
    }
</div>